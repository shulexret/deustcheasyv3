'use client';
import Link from 'next/link';
import { usePathname } from 'next/navigation';

export default function Navbar() {
  const pathname = usePathname();

  return (
    <nav className="w-full bg-white shadow flex items-center px-4 py-2 sticky top-0 z-10">
      <div className="flex space-x-4">
        <Link href="/" className={getLinkStyle(pathname === '/')}>
          Home
        </Link>
        <Link href="/A1" className={getLinkStyle(pathname === '/A1')}>
          A1
        </Link>
        <Link href="/A2" className={getLinkStyle(pathname === '/A2')}>
          A2
        </Link>
        <Link href="/B1" className={getLinkStyle(pathname === '/B1')}>
          B1
        </Link>
        <Link href="/B2" className={getLinkStyle(pathname === '/B2')}>
          B2
        </Link>
      </div>
    </nav>
  );
}

function getLinkStyle(isActive: boolean) {
  return `px-3 py-2 rounded hover:bg-lavanda hover:text-white transition ${
    isActive ? 'bg-acento text-white' : ''
  }`;
}
